<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:baselineAligned="false"
    android:orientation="horizontal"
    android:weightSum="3" >

    <LinearLayout
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical" >

            <com.mindbees.expenditure.ui.CircularContactView
                android:id="@+id/img_vp_1"
                android:layout_width="@dimen/category_viewpager_item_height"
                android:layout_height="@dimen/category_viewpager_item_height"
                android:layout_centerInParent="true"
                android:layout_marginBottom="10dp"
                android:background="@android:color/transparent" />

            <ImageView
                android:id="@+id/categryIconShaded"
                android:layout_width="@dimen/category_viewpager_item_height"
                android:layout_height="@dimen/category_viewpager_item_height"
                android:layout_centerInParent="true"
                android:background="@android:color/transparent"
                android:src="@drawable/select_tick"
                android:visibility="gone" />

            <TextView
                android:id="@+id/categoryName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/img_vp_1"
                android:layout_centerHorizontal="true"
                android:padding="5dp"
                android:singleLine="true"
                android:textColor="@android:color/black" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical" >

            <com.mindbees.expenditure.ui.CircularContactView
                android:id="@+id/img_vp_2"
                android:layout_width="@dimen/list_item__contact_imageview_size"
                android:layout_height="@dimen/list_item__contact_imageview_size"
                android:layout_centerInParent="true"
                android:layout_marginBottom="10dp"
                android:background="@android:color/transparent" />

            <ImageView
                android:id="@+id/categryIconShaded1"
                android:layout_width="@dimen/list_item__contact_imageview_size"
                android:layout_height="@dimen/list_item__contact_imageview_size"
                android:layout_centerInParent="true"
                android:background="@android:color/transparent"
                android:src="@drawable/select_tick"
                android:visibility="gone" />

            <TextView
                android:id="@+id/categoryName1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/img_vp_2"
                android:layout_centerHorizontal="true"
                android:padding="5dp"
                android:singleLine="true"
                android:textColor="@android:color/black" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical" >

            <com.mindbees.expenditure.ui.CircularContactView
                android:id="@+id/img_vp_3"
                android:layout_width="@dimen/list_item__contact_imageview_size"
                android:layout_height="@dimen/list_item__contact_imageview_size"
                android:layout_centerInParent="true"
                android:layout_marginBottom="10dp"
                android:background="@android:color/transparent" />

            <ImageView
                android:id="@+id/categryIconShaded2"
                android:layout_width="@dimen/list_item__contact_imageview_size"
                android:layout_height="@dimen/list_item__contact_imageview_size"
                android:layout_centerInParent="true"
                android:background="@android:color/transparent"
                android:src="@drawable/select_tick"
                android:visibility="gone" />

            <TextView
                android:id="@+id/categoryName2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/img_vp_3"
                android:layout_centerHorizontal="true"
                android:padding="5dp"
                android:singleLine="true"
                android:textColor="@android:color/black" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>