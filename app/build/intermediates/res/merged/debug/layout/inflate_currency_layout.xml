<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding" >

    <com.mindbees.expenditure.ui.CircularContactView
        android:id="@+id/dayLetter"
        android:layout_width="40dp"
        android:layout_marginLeft="10dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true" >
    </com.mindbees.expenditure.ui.CircularContactView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/dayLetter"
        android:layout_toLeftOf="@+id/sym"
        android:layout_toRightOf="@+id/dayLetter"
        android:orientation="vertical"
        android:paddingLeft="@dimen/padding" >

        <TextView
            android:id="@+id/textday"
            android:layout_width="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:textSize="15dp"
            android:textColor="@color/black"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:visibility="visible" />

        <!--<TextView-->
            <!--android:id="@+id/textCategory"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:singleLine="true"-->
            <!--android:textColor="@color/secondry_text"-->
            <!--/>-->

        <TextView
            android:id="@+id/textbank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textColor="@color/secondry_text"
            android:visibility="gone" />
    </LinearLayout>
</RelativeLayout>
</RelativeLayout>
