<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_clr"
    android:orientation="vertical"
    android:padding="@dimen/padding" >

    <ListView
        android:id="@+id/listBanks"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@null"
        android:scrollbarThumbVertical="@drawable/scrol_vertical_thumb"
        android:scrollbarTrackVertical="@drawable/scrl_vertical_track" >
    </ListView>

    <TextView
        android:id="@+id/addAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:text="@string/add_acnt"
        android:textAppearance="@android:style/TextAppearance.Medium"
        android:textColor="@color/secondry_text"
        android:visibility="visible" />

</RelativeLayout>